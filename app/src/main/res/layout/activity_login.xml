<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".registerlogin.LoginActivity"
        android:background="@drawable/background_login">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:id="@+id/linearLayout2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp">
        <TextView
                android:text="WELCOME!"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_welcome_login_activity"
                android:textSize="38sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/secular_one"/>
        <TextView
                android:text="Please login to continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_login_login_activity"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:paddingTop="50dp"
            android:paddingBottom="45dp"
            android:id="@+id/linearLayout5" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:src="@drawable/img_login_man"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:id="@+id/imageView17"/>
        </LinearLayout>
        <LinearLayout
                android:paddingTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Email Address"
                    android:paddingLeft="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textColor="@color/colorGrayText"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="text@gmail.com"
                    android:ems="10"
                    android:backgroundTint="@color/colorUnderline"
                    android:id="@+id/editText"
                    android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
                android:paddingTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Password"
                    android:paddingLeft="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textColor="@color/colorGrayText"/>
            <EditText
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:backgroundTint="@color/colorUnderline"
                    android:id="@+id/editText2"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrayText"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:gravity="center_horizontal">
            <ImageView
                    android:src="@drawable/btn_next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/login_imageview_login"/>
            <TextView
                    android:layout_marginTop="10dp"
                    android:text="Forgot Password?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textAlignment="center"
                    android:textColor="@color/colorGrayText"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout6"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:text="Don't have an account?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1" android:textAlignment="textEnd"
                android:textColor="@android:color/white" android:textStyle="bold"/>
        <TextView
                android:paddingLeft="5dp"
                android:text="Sign Up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signup_textview_login"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@android:color/white" android:textStyle="bold"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>